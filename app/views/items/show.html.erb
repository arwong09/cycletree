<div class="container" id="item-show-container">
<div class="row">
<!-- <div class="col-xs-12"> -->
  <div class="col-xs-12">
    <%= image_tag @item.owner.image.url(:item_thumb) %>
    <h3><%= @item.owner.username %></h3>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-xs-7">
        <div class="jumbotron" id="jumbotron-item-show">
          <div class="col-xs-3">
            <div class='btn btn-secondary item-show-favorite'>
              <span class='glyphicon glyphicon-heart'></span> Favorite
            </div>
          </div>
          <div class="col-xs-9">
            <h4>Like this item?</h4>
            Add it to your favorites to revisit it later.
          </div>
          <div class='row'></div>
        </div>
        
        <%= image_tag @item.image.url(:show) %>
        
        <ul class="nav nav-tabs nav-tabs-item-show">
          <li class="active" id='tab-item-show-first'>
            <a href="#tab-details" data-toggle="tab">Item Details</a>
          </li>
          <li>
            <a href="#tab-reviews" data-toggle="tab">Reviews</a>
          </li>
          <li>
            <a href="#tab-shipping" data-toggle="tab">Shipping Details</a>
          </li>
        </ul>
        
        <div class="tab-content">
          <div class="tab-pane pane-item-show active" id='tab-details'>
            <%= @item.description %>
            <%= @item.features %>
          </div>
          <div class="tab-pane pane-item-show" id='tab-reviews'>
           reviews
          </div>
          <div class="tab-pane pane-item-show" id='tab-shipping'>
            shipping info
          </div>
        </div>
    </div>
    
    <div class="col-xs-5"><!-- BEGIN RIGHT PANE -->
      <div class="panel" id="panel-item-show-cart">
        <div class="panel-body panel-body-item-show-cart">
          <h3><%= @item.title %></h3>
          <div class='item-show-price'>
            $<%= @item.price %>
          </div>
          <div class="btn btn-secondary item-show-question">
            Ask a Question
          </div>
          <div class="item-show-condition">
            <h5>Condition</h5>
            <a href="#"><%= @item.condition %></a>
          </div>
          <div class="panel-item-show-features">
            <h4>Overview</h4>
            <%= @item.features %>
          </div>
        </div>
        <div class='btn' id='btn-add-to-cart'>Add to Cart</div>
      </div>
    </div>
  </div>
  </div>
</div>
