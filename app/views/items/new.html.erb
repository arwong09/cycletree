<%= form_for [current_user, @item], url: user_items_url(current_user), method: :post, html: { multipart: true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.label :price %>
  <%= f.text_field :price %>
  
  <%= f.label :condition %>
  <%= f.text_field :condition %>
  
  <%= f.label :features %>
  <%= f.text_field :features %>
  
  <%= select("item", "categories", Category.all.collect { |c| [ c.title, c.id ] }, {include_blank: 'None'}) %>
  
  <%= f.file_field :image %>
  
  <%= f.submit "post bike" %>
<% end %>

